<!DOCTYPE html>
<%= javascript_include_tag "application" %>
<html>
<head>
<title>Jewellery Store</title>

<%= stylesheet_link_tag "scaffold" %>
<%= stylesheet_link_tag "jewel11", :media => "all" %>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>
</head>

<body id="store" >
<div id="banner" >
<%= image_tag("logo.jpg") %>
<%= @page_title || "Jewellery Store" %>
</div>
<div id="columns" >
<div id="side" >
<div id="cart" >
<% if @cart %>
<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
<%= render @cart %>
<% end %>
<% end %>
</div>
<%= link_to 'Home', store_path %><br/>
<a href="/userproducts/" >Products</a><br />
<a href="/store/1/questions" >Questions</a><br />
<a href="/store/1/news" >News</a><br />
<a href="/store/1/contact" >Contact</a><br />
<a href="/users/new" >Sign in</a><br />
<a href="/login" >Login</a><br />
<a href="/logout" >Log Out</a><br />
</div>
<div id="main" >
<%= yield %>
</div>
</div>
</body>
</html>

