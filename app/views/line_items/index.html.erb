<h1>Listing line_items</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Cart</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  
  
<% @line_items.last(5).each do |line_item| %>
  <tr>
    <td><%= line_item.product_id %></td>
    <td><%= line_item.cart_id %></td>
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
<td><%= button_to 'Destroy', line_item, method: :delete, :onclick => "return confirm('Are you sure you want to delete this line items?')" %></td>
  </tr>
<% end %>
</table>

